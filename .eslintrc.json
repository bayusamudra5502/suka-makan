{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jasmine": true,
    "codeceptjs/codeceptjs": true
  },
  "extends": [
    "airbnb-base",
    "plugin:jasmine/recommended",
    "plugin:codeceptjs/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {},
  "plugins": ["jasmine", "codeceptjs"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@img", "./src/images"],
          ["@style", "./src/styles"],
          ["@", "./src"]
        ]
      }
    }
  }
}
